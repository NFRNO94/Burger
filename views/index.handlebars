<div class="container">
    <div class="row">
        <div class="col text-center title">
            <h1>Eat-da-Burgers!</h1>
            <br>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-6 text-center">
            <h3>Burgers Menu</h3>
            <hr class="bg-dark">

            <ul class="text-left">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-lg-6 text-center">
            <h3> Sorry, these burgers have been devoured!</h3>
            <hr class="bg-dark">

            <ul class="text-left">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <h2>Add a Burger</h2>
            <hr class="bg-dark">
            <form class="create-form">

                <div class="form-group">
                    <label for="bu"><strong>Burger Name:</strong></label>
                    <input type="text" id="bu" class="border border-dark" name="name">
                </div>

                <div class="form-group">
                    <label for="devoured"><strong>Devoured?</strong></label><br>
                    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                    <input type="radio" name="devoured" value="0"> Not Devoured!
                </div>

                <button type="submit" class="btn-outline-dark bg-warning">Add Burger</button>
            </form>
        </div>
    </div>
</div>